		elif [ "$1" = "launch" ]; then
		if [ -z "$2" ]; then
			prtred "Enter Your Bot-number :" 
			read -rp ' ' BOT
			while true
			do
			./telegram-bot -p "bgtabchi"$BOT -s $PWD/Tabchi_$BOT.lua
			sleep 5
			prtbrown "Bot Running !"
			done
		else
			while true
			do
			./telegram-bot -p "bgtabchi"$2 -s $PWD/Tabchi_$2.lua
			sleep 5
			prtbrown "Bot Running !"
			done
		fi
